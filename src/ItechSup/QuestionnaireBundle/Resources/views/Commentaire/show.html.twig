{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Commentaire</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ entity.libelle }}</td>
            </tr>
            <tr>
                <th>Zonedetexte</th>
                <td>{{ entity.zoneDeTexte }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('commentaire') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('commentaire_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
