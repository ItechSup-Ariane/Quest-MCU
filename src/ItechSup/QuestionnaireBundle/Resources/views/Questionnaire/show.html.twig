{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Questionnaire</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ entity.titre }}</td>
            </tr>
            {% for categ in entity.categories %}
                <tr>
                    <td><strong><u>{{ categ.libelle }}</u></strong></td>
                </tr>
                {% for quest in categ.questions %}
                    <tr>
                        <td><i>{{ quest.libelle }}</i></td>
                    
                    {% for rep in quest.reponses %}
                        <td><label>{{ rep.libelle }}</label><input type="radio" name={{ quest.id }} value={{ rep.libelle }}></td>
                    {% endfor %} 
                    </tr>
                {% endfor %}    
            {% endfor %}
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('questionnaire') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('questionnaire_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
